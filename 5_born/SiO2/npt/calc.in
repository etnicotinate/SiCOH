# Setup output
# Born term, 2nd derivative of energy
compute     vir all pressure NULL virial
compute     born all born/matrix numdiff ${delta} vir
fix 	    avborn all ave/time ${nevery} ${nrepeat} ${nfreq} c_born[*] ave running &
            file born.out 
fix         avvir all ave/time 1 1 1 c_vir[*] &
            file vir.out 

thermo		${nthermo}
thermo_style custom step temp pe press 
thermo_modify norm no

